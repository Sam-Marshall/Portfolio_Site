<div class="row">
	<div class="col s12 center">
	    <h3><i class="mdi-content-send brown-text"></i></h3>
	    <h4>Contact</h4>
	    <div class="row">
			<form class="col s12">
			    <div class="row">
			      <div class="input-field col s6">
			        <input id="contact_name" type="text" class="validate">
			        <label for="name">Name</label>
			      </div>
			      <div class="input-field col s6">
			        <input id="contact_company" type="text" class="validate">
			        <label for="company">Company</label>
			      </div>
			    </div>
			    <div class="row">
			      <div class="input-field col s12">
			        <input id="contact_email" type="email" class="validate">
			        <label for="email">Email</label>
			      </div>
			    </div>
			    <div class="row">
		          <div class="input-field col s12">
	  	            <textarea id="contact_message" class="materialize-textarea"></textarea>
			        <label for="message">Message</label>
			       </div>
			    </div>
			    <div class="row">
			    	<span id="wait_message"></span>
			    </div>
			    <button class="btn waves-effect waves-light" type="submit" id="send-email">Send Email
				  <i class="material-icons right">send</i>
				</button>
			</form>
		</div>
	</div>
</div>